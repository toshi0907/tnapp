# Production Environment Variables
# .env.example を .env にコピーして本番用設定を行ってください

PORT=3000
NODE_ENV=production

# Basic認証の設定（本番環境では強固なパスワードを設定）
AUTH_USER=admin
AUTH_PASSWORD=your-very-secure-production-password-change-this

# Basic認証を有効にするか (true/false)
# nginx側でBasic認証を行う場合は false に設定
BASIC_AUTH_ENABLED=true

# その他の本番環境設定
# ログレベル（オプション）
# LOG_LEVEL=info

# Database (将来的な拡張用)
# DATABASE_URL=

# JWT Secret (将来的な拡張用)
# JWT_SECRET=your-super-secret-jwt-key-for-production

# API Keys (将来的な拡張用)
# API_KEY=